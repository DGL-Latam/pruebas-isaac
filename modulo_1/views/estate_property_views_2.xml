<?xml version="1.0"?>
<odoo>

    <!-- Busqueda -->
    <record id="estate_property_type_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
            </search>
        </field>
    </record>

    <!-- Formato -->
    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="House">
                <sheet>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                        </group>

                    </group>
                    <notebook>
                            <page string="Description">
                                <group>


                                </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

<!-- Lista -->
    <record id="estate_property_type_view_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="property_type_id"/>
            </tree>
        </field>
    </record>

    <!-- Formato -->
    <record id="estate_property_type_view_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="House">
                <sheet>
                    <group>
                        <group>
                            <field name="property_type_id"/>
                        </group>
                    </group>
                    <notebook>
                            <page string="Description">
                                <group>

                                    <field name="property_type_id"/>

                                </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Inicio -->
    <record id="estate_property_action_type" model="ir.actions.act_window">
        <field name="name">Estate Property Type</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_estate_property_action_3_1" action="estate_property_action_type" name="Property Type" parent="menu_estate_property_action_3"
            groups="base.group_user" sequence="10"/>


</odoo>