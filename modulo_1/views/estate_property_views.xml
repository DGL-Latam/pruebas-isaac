<?xml version="1.0"?>
<odoo>

    <!-- Busqueda -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_areas"/>
                <field name="facades"/>
                <filter name="state" string="available" domain="['|', ('state', '=', 'new'), ('state', '=', 'offerReceived')]"/>
                <filter name="groupby_zp" string="Postcode" context="{'group_by': 'postcode'}"/>
            </search>
        </field>
    </record>

    <!-- Formato -->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="My_new_house">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="state"/>
                        </group>


                    </group>
                    <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_areas"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

<!-- Lista -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="name"/>
                <field name="postcode"/>
                <field name="state"/>
                <field name="bedrooms"/>
                <field name="living_areas"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <!-- Inicio -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>

    </record>

    <menuitem
            id="menu_estate_property_action"
            action="estate_property_action"
            name="Estate Property Action"
            groups="base.group_user"
            sequence="10"/>

    <menuitem
            id="menu_estate_property_action_2"
            action="estate_property_action"
            name="Estate Property Action"
            parent="menu_estate_property_action"
            groups="base.group_user"
            sequence="10"/>

    <menuitem
            id="menu_estate_property_action_2_1"
            action="estate_property_action"
            name="Estate Property Action"
            parent="menu_estate_property_action_2"
            groups="base.group_user"
            sequence="10"/>


</odoo>